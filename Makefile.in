obj = bin/viash
VERSION = $(shell awk -F'\"' '/version :=/ { print $$2 }' build.sbt)

$(obj): $(shell find src/ -name "*.scala")
	sbt 'set test in assembly := {}' 'set assemblyOutputPath in assembly := new File("target/viash.jar")' assembly
	mkdir -p bin
	cat src/stub.sh target/viash.jar > $(obj)
	chmod +x $(obj)
	@echo "==================================> $(obj)"
	
tools: $(obj) $(shell find src/viash)
	# Use build_namespace to build itself :-)
	bin/viash run -f src/viash/build_namespace/functionality.yaml -- -n viash -t bin
	# Now build all tools
	bin/viash-build_namespace -n viash -t bin
	@echo "==================================> tools"

.PHONY: with-docker
with-docker:
	mkdir -p bin
	docker build -t viash .
	docker create -it --name viash-cp viash bash
	docker cp viash-cp:"/app/viash/target/viash.jar" /tmp/viash.jar
	docker rm -f viash-cp
	cat src/stub.sh /tmp/viash.jar > $(obj)
	chmod +x $(obj)

.PHONY: docker
docker:
	docker build -t dataintuitive/viash:$(VERSION) .

.PHONY: test
test:
	sbt 'testOnly -- -l com.dataintuitive.viash.NativeTest'

.PHONY: clean
clean:
	sbt clean
	rm -r bin/

.PHONY: install
install: $(obj)
	mkdir -p $(DESTDIR)$(PREFIX)/bin
	cp $< $(DESTDIR)$(PREFIX)/bin/viash

.PHONY: uninstall
uninstall:
	rm -f $(DESTDIR)$(PREFIX)/bin/viash
